{
  "project_meta": {
    "name": "Grocery Delivery System - Larouine",
    "version": "1.0.0",
    "type": "Full Stack Mobile/Web Application",
    "target_regions": ["DZ", "TN", "MA"],
    "languages": ["ar", "fr", "en"],
    "repository": {
      "name": "Larouine",
      "url": "git@github.com:Loofy147/Larouine.git",
      "main_branch": "main"
    }
  },

  "core_components": {
    "user_app": {
      "name": "User Mobile Application",
      "requirements": {
        "authentication": {
          "methods": ["OTP", "Guest Access"],
          "security": ["JWT", "SSL Pinning"],
          "search_keywords": ["multi-factor auth", "phone verification", "JWT implementation"]
        },
        "product_browsing": {
          "features": ["Category Navigation", "Barcode Scanning", "Advanced Filters"],
          "search_params": {
            "min_stars": 100,
            "max_age_days": 180
          }
        },
        "payment_system": {
          "gateways": ["Dahabiya", "CIB", "Barcode Payments"],
          "compliance": ["PCI DSS Level 1"]
        }
      }
    },

    "driver_app": {
      "name": "Driver Management System",
      "critical_features": [
        "Real-time GPS Tracking",
        "Order Assignment Algorithm",
        "Performance Analytics"
      ],
      "integration_requirements": {
        "maps": ["Google Maps API", "Geofencing"],
        "notification_system": ["Push", "SMS"]
      }
    },

    "store_panel": {
      "name": "Store Management Dashboard",
      "essential_functionality": [
        "Inventory Management API",
        "Dynamic Pricing Engine",
        "Sales Analytics"
      ],
      "tech_constraints": {
        "framework": "React.js",
        "state_management": "Redux"
      }
    }
  },

  "technical_specifications": {
    "frontend": {
      "mobile": {
        "primary_stack": "Flutter",
        "required_versions": "Flutter 3.3+",
        "critical_libraries": ["Provider", "Google Maps SDK", "Barcode Scanner"]
      },
      "web": {
        "admin_panel": "React.js + Ant Design",
        "store_panel": "Vue.js + Vuetify"
      }
    },

    "backend": {
      "language": "Node.js",
      "framework": "NestJS",
      "essential_services": [
        "Redis Caching Layer",
        "WebSocket Server",
        "Queue Management System (BullMQ)"
      ],
      "api_standards": {
        "response_time": "<2s",
        "rate_limiting": "1000 requests/min"
      }
    },

    "database": {
      "primary": "PostgreSQL",
      "replication": "Master-Slave with 2 Replicas",
      "backup_strategy": {
        "frequency": "Every 2 hours",
        "retention": "7 days"
      }
    },

    "security": {
      "encryption_standards": ["AES-256", "TLS 1.3"],
      "compliance": ["GDPR", "Local Data Protection Laws"],
      "audit_requirements": ["Quarterly Penetration Testing"]
    }
  },

  "integration_matrix": {
    "payment_gateways": [
      {
        "name": "Dahabiya",
        "features": ["Card Processing", "Refund Handling"],
        "api_version": "v2.1",
        "test_credentials": {
          "sandbox_key": "dhb_sandbox_****",
          "production_key": "ENV:DAHABIYA_PROD_KEY"
        }
      }
    ],
    "mapping_services": {
      "primary": "Google Maps Platform",
      "fallback": "OpenStreetMap",
      "required_features": [
        "Geocoding API",
        "Directions API",
        "Places Autocomplete"
      ]
