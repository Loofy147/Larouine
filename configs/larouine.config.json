    "analytics": {
      "primary": "Firebase Analytics",
      "secondary": "Mixpanel",
      "kpis": [
        "User Retention Rate",
        "Average Order Value",
        "Delivery Time Metrics"
      ]
    }
  },

  "deployment_specs": {
    "infrastructure": {
      "cloud_provider": "AWS",
      "services": ["EC2", "RDS", "S3", "CloudFront"],
      "cdn_requirements": ["Global Edge Network", "DDoS Protection"]
    },
    "monitoring": {
      "tools": ["Prometheus/Grafana", "Sentry"],
      "alert_policies": [
        "Server CPU > 80%",
        "API Error Rate > 1%",
        "Payment Failures > 0.5%"
      ]
